#!/usr/bin/make -f
.PHONY: compile run clean match

src = $(firstword $(wildcard *.java))
jar = main.jar

run: compile
	java -jar $(jar)

compile: $(jar)

clean:
	-rm class/*.class
	-rmdir class

match:
	case $(src) in *.java) exit;; esac; exit 1


$(jar): $(src)
	#test -d class || mkdir class
	#javac -d class $(src)
	#jar cf $(jar) class/*
